{
  "$schema": "https://json.schemastore.org/package",
  "name": "@aha-co/config",
  "version": "1.2.0",
  "description": "Standardized configs for Aha JS projects",
  "main": "index.js",
  "types": "index.d.ts",
  "type": "module",
  "imports": {
    "#/*": "./*"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    },
    "./prettier": {
      "types": "./prettier.d.ts",
      "import": "./prettier.js"
    },
    "./typescript": "./typescript.app.json",
    "./typescript.app": "./typescript.app.json",
    "./typescript.lib": "./typescript.lib.json",
    "./reset.d.ts": "./reset.d.ts",
    "./eslint": {
      "types": "./eslint.config.d.ts",
      "import": "./eslint.config.js"
    }
  },
  "prettier": "./prettier.js",
  "scripts": {
    "format": "prettier . --write",
    "lint": "eslint .",
    "typecheck": "tsc",
    "validate": "run-p -l format lint typecheck",
    "prepack": "npm run validate"
  },
  "keywords": [
    "config",
    "eslint",
    "prettier",
    "typescript",
    "aha-co"
  ],
  "author": {
    "name": "The Aha Co",
    "email": "engineering@theaha.co",
    "url": "https://theaha.co"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/theahaco/aha-co-config"
  },
  "homepage": "https://github.com/theahaco/aha-co-config",
  "license": "MIT",
  "dependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-testing-library": "^7.6.1",
    "globals": "^16.3.0",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.38.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/eslint": "^9.6.1",
    "@types/react": "^19.1.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
